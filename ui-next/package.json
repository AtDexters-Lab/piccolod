{
	"name": "ui-next",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"e2e": "playwright test",
		"e2e:headed": "playwright test --headed",
		"e2e:debug": "PWDEBUG=1 playwright test --headed",
		"capture:screenshots": "node ./scripts/capture-ui-screenshots.mjs",
		"screenshots": "./scripts/run-e2e-with-server.sh capture:screenshots"
	},
	"devDependencies": {
		"@playwright/test": "^1.48.2",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24.10.0",
		"autoprefixer": "^10.4.21",
		"patch-package": "^8.0.1",
		"postcss": "^8.5.6",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^3.4.13",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"dependencies": {
		"@radix-ui/colors": "^3.0.0",
		"@tanstack/query-core": "^5.90.7",
		"@tanstack/svelte-query": "^6.0.5"
	}
}
